<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefHeight="400.0" prefWidth="700.0">
         <children>
            <VBox id="pane1">
               <children>
                  <VBox VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label text="Armes débloquées">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </Label>
                              <Separator orientation="VERTICAL" />
                              <JFXButton onMouseClicked="#onAddWeaponClicked" text="Ajouter une arme">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </JFXButton>
                           </children>
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                        </HBox>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                           <content>
                              <VBox fx:id="unlockedBox" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <ImageView fx:id="profileView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
                              <Label fx:id="profileLabel" />
                           </children>
                        </HBox>
                        <JFXButton id="newClassButton" maxWidth="1.7976931348623157E308" onMouseClicked="#onNewLoadoutClicked" prefHeight="50.0" text="Nouvelle classe" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox id="pane2" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label id="title" text="Warzone Loadouts" />
               </children>
            </VBox>
         </children>
         <stylesheets>
            <URL value="@WarzoneLoadouts.css" />
            <URL value="@ScrollPane.css" />
         </stylesheets>
      </HBox>
   </children>
</StackPane>
